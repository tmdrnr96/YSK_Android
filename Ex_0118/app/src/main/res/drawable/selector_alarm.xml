<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--버튼 클릭 전에 참조할 이미지-->
    <item android:drawable="@drawable/b_alarm"
        android:state_pressed="false"/><!--android:state_pressed="false" : 버튼이 눌러지기 전에-->

    <!--버튼이 클릭되었을 때 참조할 이미지-->
    <item android:drawable="@drawable/a_alarm"
        android:state_pressed="true"/><!--android:state_pressed="true" : 버튼이 눌려졌을 때-->
</selector>